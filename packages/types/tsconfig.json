{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "dist",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "composite": true,
    "baseUrl": "./",
    "paths": {
      "@tailwind-studio/*": [
        "../*/src"
      ]
    }
  },
  "include": [
    "src",
    "tests/**/*.ts"
  ]
}